<script>
document.addEventListener("DOMContentLoaded", function () {
  const unitCards = document.querySelectorAll(".promo-unit-card");

  unitCards.forEach(card => {
    card.addEventListener("click", function () {
      const targetId = this.getAttribute("data-target");
      if (!targetId) return;

      const targetSection = document.getElementById(targetId);
      const rect = this.getBoundingClientRect(); // Get card position

      // Close all other open sections
      document.querySelectorAll(".promo-expandable-info").forEach(section => {
        section.style.display = "none";
      });

      // Position the section relative to the clicked square
      targetSection.style.display = "block";
      targetSection.style.top = `${rect.top + window.scrollY}px`;
      targetSection.style.left = `${rect.left + window.scrollX}px`;

      // Adjust position based on location
      if (this.classList.contains("top-left")) {
        targetSection.style.transform = "translate(-110%, -110%)";
      } else if (this.classList.contains("top-center")) {
        targetSection.style.transform = "translate(-50%, -110%)";
      } else if (this.classList.contains("top-template")) {  // NEW
        targetSection.style.transform = "translate(30%, -230%)";
      } else if (this.classList.contains("top-right")) {
        targetSection.style.transform = "translate(110%, -110%)";
      } else if (this.classList.contains("left-center")) {
        targetSection.style.transform = "translate(-110%, -50%)";
      } else if (this.classList.contains("right-center")) {
        targetSection.style.transform = "translate(110%, -50%)";
      } else if (this.classList.contains("bottom-left")) {
        targetSection.style.transform = "translate(-110%, 110%)";
      } else if (this.classList.contains("bottom-center")) {
        targetSection.style.transform = "translate(-50%, 110%)";
      } else if (this.classList.contains("bottom-right")) {
        targetSection.style.transform = "translate(110%, 110%)";
      }
    });
  });
});




</script>
