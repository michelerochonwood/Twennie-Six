{{#*inline "title"}}Login | Twennie{{/inline}}

<div class="login-container">
  <h1 class="login-title">login</h1>
  
  {{#if error}}
    <div class="login-alert login-alert-error">{{error}}</div>
  {{/if}}
  
  {{#if message}}
    <div class="login-alert login-alert-success">{{message}}</div>
  {{/if}}

  <form id="login-form" class="login-form" action="/auth/login" method="POST">
    {{#if csrfToken}}
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
    {{/if}}

    <div class="login-field">
      <label for="email" class="login-label">Email</label>
      <input type="email" id="email" name="email" class="login-input" required>
    </div>

    <div class="login-field">
      <label for="password" class="login-label">Password</label>
      <input type="password" id="password" name="password" class="login-input" required>
    </div>

    <div class="login-field">
      <label class="login-label">Membership Type</label>
      <p>Help Twennie find you in our database. Choose your membership type from the options below.</p>

      <div class="membership-options">
        <!-- Individual Member -->
        <label class="membership-option">
          <input type="radio" name="membershipType" value="member" required hidden>
          <div class="membership-icon">
            <!-- SVG Placeholder -->
    <img src="https://www.twennie.com/images/bluey1.png" alt="Individual" class="membership-character-image">
          </div>
          <span class="membership-label">I am an individual member</span>
        </label>

        <!-- Group Leader -->
        <label class="membership-option">
          <input type="radio" name="membershipType" value="leader" required hidden>
          <div class="membership-icon">
            <!-- SVG Placeholder -->
    <img src="https://www.twennie.com/images/bluey_3.png" alt="Group" class="membership-character-image">
          </div>
          <span class="membership-label">I am a group leader</span>
        </label>

        <!-- Twennie Group Member -->
        <label class="membership-option">
          <input type="radio" name="membershipType" value="group_member" required hidden>
          <div class="membership-icon">
            <!-- SVG Placeholder -->
    <img src="https://www.twennie.com/images/bluey2.png" alt="Full Individual" class="membership-character-image">
          </div>
          <span class="membership-label">I am a member of a group</span>
        </label>
      </div>
    </div>

    <button type="submit" class="login-button">login</button>

    <div class="login-links">
      <a href="https://www.twennie.com/membership_form" class="login-link">Not a member? Become one!</a>
      <a href="https://www.twennie.com/forgot-password" class="login-link">Forgot password?</a>
    </div>
  </form>

  <!-- Google Authentication Button -->
<div class="google-login-container" style="margin-bottom: 200px;">

  <a href="https://www.twennie.com/auth/google" class="google-login-button">
    <img src="https://www.twennie.com/images/google.svg" alt="Google Logo" class="google-logo" >
    <span class="google-login-text" >sign in with Google</span>
  </a>
</div>

</div>


