<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Dynamic Page title -->
  <title>{{#if title}}{{title}} - Twennie By Topic{{else}}Twennie By Topic{{/if}}</title>

  {{!-- views/shared/consent_analytics.hbs --}}
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){ dataLayer.push(arguments); }

  gtag('consent', 'default', {
    security_storage: 'granted',
    functionality_storage: {{#if consent.functional}}"granted"{{else}}"denied"{{/if}},
    analytics_storage:    {{#if consent.analytics}}"granted"{{else}}"denied"{{/if}},
    ad_storage:           "denied",
    ad_user_data:         "denied",
    ad_personalization:   "denied"
  });
</script>

{{#if consent.analytics}}
  <script async src="https://www.googletagmanager.com/gtag/js?id={{GA_ID}}"></script>
  <script>
    gtag('js', new Date());
    gtag('config', '{{GA_ID}}');
  </script>
{{/if}}


  <!-- Global Navigation Styles -->
  <link rel="stylesheet" href="https://www.twennie.com/css/navigation.css?v={{timestamp}}">

  <!-- Main Topic Styles -->
  <link rel="stylesheet" href="https://www.twennie.com/css/bytopicstyles.css?v={{timestamp}}">

  <!-- Mobile Navigation Script -->
  <script src="https://www.twennie.com/javascript/mobile-nav.js?v={{timestamp}}" defer></script>

  <!-- Ionicons Library -->
  <script type="module" src="https://cdn.jsdelivr.net/npm/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://cdn.jsdelivr.net/npm/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</head>

<body class="dashboard-body">
  {{> mainpartials/header}}
  
  <main class="main-content">
    {{#if error}}
      <div class="dashboard-alert error">{{error}}</div>
    {{/if}}

    {{#if message}}
      <div class="dashboard-alert success">{{message}}</div>
    {{/if}}

    {{{body}}}
  </main>

  <!-- Tagging Script -->
  <script src="https://www.twennie.com/javascript/tagging/tagging.js?v={{timestamp}}"></script>

  {{> mainpartials/footer}}
</body>
</html>
