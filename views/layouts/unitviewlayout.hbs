  <script src="https://www.twennie.com/javascript/prompts/registerform.js"></script>
  <script src="https://www.twennie.com/javascript/prompts/assignform.js"></script>
  <script src="https://www.twennie.com/javascript/prompts/assignformerror.js"></script>
  <script src="https://www.twennie.com/javascript/animation/completion.js"></script>

  <meta name="csrf-token" content="{{csrfToken}}">

