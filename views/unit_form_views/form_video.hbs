{{#*inline "title"}}Post a Video | Twennie{{/inline}}
{{> mainpartials/videoinstructions_partial}}

<div class="contribute-wave-divider">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 160">
    <path fill="#939598" fill-opacity="1"
      d="M0,64L80,58.7C160,53,320,43,480,58.7C640,75,800,117,960,122.7C1120,128,1280,96,1360,80L1440,64L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z">
    </path>
  </svg>
</div>

<div class="form-video-background">
  <div class="form-video-container">
    <!-- Form Content -->
    <form id="video-form" class="video-form" action="/unitform/submit_video" method="POST">

      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <input type="hidden" name="_id" value="{{data._id}}">

      <!-- Video Title -->
      <div class="form-field">
        <label for="video-title">Video Title</label>
        <input type="text" id="video-title" name="video_title" value="{{data.video_title}}" required>
      </div>

<!-- Main Topic -->
<div class="form-field">
  <label for="main-topic">Main Topic</label>
  <select id="main-topic" name="main_topic" required>
    <option value="">Please select a main topic</option>
    {{#each mainTopics}}
      <option value="{{this}}" {{#ifEquals this ../data.main_topic}}selected{{/ifEquals}}>{{this}}</option>
    {{/each}}
  </select>
</div>

<!-- Secondary Topic -->
<div class="form-field">
  <label for="secondary-topics">Secondary Topic (Optional)</label>
  <select id="secondary-topics" name="secondary_topics">
    <option value="">None</option>
    {{#each mainTopics}}
      <option value="{{this}}" {{#ifIncludes ../data.secondary_topics this}}selected{{/ifIncludes}}>{{this}}</option>
    {{/each}}
  </select>
</div>



      <!-- Video Content -->
<div class="form-field">
  <label for="video-content">Videos should be a minimum of 3 minutes, maximum 20 minutes.</label>

  <p class="form-help-text" style="margin-top: 0.5rem; font-size: 0.85rem; color: #555;">
    <strong>Important:</strong> Upload your video to a personal or team YouTube channel and set the visibility to <strong>"Unlisted"</strong>.
    This ensures your video is not public on YouTube but can still be viewed by Twennie members. 
    <a href="https://support.google.com/youtube/answer/157177" target="_blank" rel="noopener noreferrer" style="color:#4a4ab2; text-decoration: underline;">
      Learn how to change YouTube visibility settings
    </a>.
  </p>

  <textarea id="video-content" name="video_content" rows="25" placeholder="Paste your unlisted YouTube link here." required>{{data.video_content}}</textarea>
</div>

      <!-- Toggles -->
      <div class="form-toggle">
        <label>
          <input type="checkbox" name="clarify_topic" {{#if data.clarify_topic}}checked{{/if}}>
          Does your video further clarify the topic?
        </label>
      </div>
      <div class="form-toggle">
        <label>
          <input type="checkbox" name="produce_deliverables" {{#if data.produce_deliverables}}checked{{/if}}>
          Does it suggest tasks that produce deliverables?
        </label>
      </div>
      <div class="form-toggle">
        <label>
          <input type="checkbox" name="new_ideas" {{#if data.new_ideas}}checked{{/if}}>
          Does it include some new ideas and creative suggestions?
        </label>
      </div>
      <div class="form-toggle">
        <label>
          <input type="checkbox" name="engaging" {{#if data.engaging}}checked{{/if}}>
          Is the video easy to follow and engaging?
        </label>
      </div>
      <div class="form-toggle">
        <label>
          <input type="checkbox" name="permission" {{#if data.permission}}checked{{/if}} required>
          Do you provide consent for this library unit to be used for Twennie promotional purposes?
        </label>
      </div>

      <!-- Short Summary -->
      <div class="form-field">
        <label for="short-summary">Short Summary (50 words)</label>
        <textarea id="short-summary" name="short_summary" maxlength="300" required>{{data.short_summary}}</textarea>
      </div>

      <!-- Full Summary -->
<!-- Full Summary -->
<div class="form-field">
  <label for="full-summary">
    Full Summary <span style="font-weight: normal; font-size: 0.85em;">(Optional, 150 words)</span>
  </label>
  <p class="form-help-text" style="font-size: 0.85rem; color: #555; margin-top: 4px;">
    The full summary provides additional context about your video and helps other members understand its focus and value. While optional, including both summaries is encouraged.
  </p>
  <textarea id="full-summary" name="full_summary" maxlength="600">{{data.full_summary}}</textarea>
</div>

      <!-- NEW: Visibility Toggles -->
      <div class="form-field">
        <label>Who can access this video?</label>
        <div class="visibility-toggle-row">
          <label class="visibility-option">
            <input type="radio" name="visibility" value="team_only" {{#ifEquals data.visibility "team_only"}}checked{{/ifEquals}} required>
            share with my team only
          </label>
          <label class="visibility-option">
            <input type="radio" name="visibility" value="organization_only" {{#ifEquals data.visibility "organization_only"}}checked{{/ifEquals}} required>
            share with my organization only
          </label>
          <label class="visibility-option">
            <input type="radio" name="visibility" value="all_members" {{#ifEquals data.visibility "all_members"}}checked{{/ifEquals}} required>
            share with all Twennie members
          </label>
        </div>
      </div>

      <!-- Buttons -->
      <div class="form-buttons">
        <button type="submit" name="submit" value="submit" class="form-button submit-button">submit for approval</button>
      </div>
    </form>
  </div>
</div>

{{> mainpartials/footer}}
