{{#*inline "title"}}Set up MFA | Twennie{{/inline}}
<section class="leader-membership-tab">
  <h2 class="leader-membership-title">set up mfa (totp)</h2>
  <div class="leader-membership-grid" style="gap:1.5rem;">
    <div class="leader-membership-column" style="text-align:center;">
      {{#if error}}<p style="color:#b00020;">{{error}}</p>{{/if}}
      <img src="{{qrDataUrl}}" alt="Scan this QR code" style="width:220px;height:220px;margin:0 auto 1rem;display:block;">
      <p>Canâ€™t scan? Use this key: <code>{{manualKey}}</code></p>
      <form action="/auth/mfa/verify-setup" method="POST" style="margin-top:1rem;">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <label class="leader-membership-label" for="token">Enter the 6-digit code:</label>
        <input id="token" class="leader-membership-input" name="token" required>
        <div class="group-membership-button-container" style="margin-top:1rem;">
          <button class="group-membership-btn">verify & enable</button>
        </div>
      </form>
    </div>
  </div>
</section>
