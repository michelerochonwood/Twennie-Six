<div class="member-topics-container">
  <h3 class="member-dashboard-subtitles">my topics</h3>
  <p>
    These are your three topics of interest. They give you quick access to content that matters to you and help determine email alerts. To change them or opt out of emails, visit your membership overview and choose your preferred email level.
  </p>

  <div class="member-topics-grid">
    {{#if selectedTopics.topic1.title}}
      <div class="member-topic-card">
        <div class="member-topic-inner">
          <div class="member-topic-title-area">
            <div class="member-topic-title">{{selectedTopics.topic1.title}}</div>
          </div>
          <div class="member-topic-subtopics-area">
            <ul class="member-topic-subtopics">
              {{#each selectedTopics.topic1.subtopics}}
                <li>{{this}}</li>
              {{else}}
                <li>No subtopics available</li>
              {{/each}}
            </ul>
          </div>
          <div class="member-topic-button-area">
            <a href="/topics/{{selectedTopics.topic1.viewName}}" class="member-topic-review">review this topic</a>
          </div>
        </div>
      </div>
    {{/if}}

    {{#if selectedTopics.topic2.title}}
      <div class="member-topic-card">
        <div class="member-topic-inner">
          <div class="member-topic-title-area">
            <div class="member-topic-title">{{selectedTopics.topic2.title}}</div>
          </div>
          <div class="member-topic-subtopics-area">
            <ul class="member-topic-subtopics">
              {{#each selectedTopics.topic2.subtopics}}
                <li>{{this}}</li>
              {{else}}
                <li>No subtopics available</li>
              {{/each}}
            </ul>
          </div>
          <div class="member-topic-button-area">
            <a href="/topics/{{selectedTopics.topic2.viewName}}" class="member-topic-review">review this topic</a>
          </div>
        </div>
      </div>
    {{/if}}

    {{#if selectedTopics.topic3.title}}
      <div class="member-topic-card">
        <div class="member-topic-inner">
          <div class="member-topic-title-area">
            <div class="member-topic-title">{{selectedTopics.topic3.title}}</div>
          </div>
          <div class="member-topic-subtopics-area">
            <ul class="member-topic-subtopics">
              {{#each selectedTopics.topic3.subtopics}}
                <li>{{this}}</li>
              {{else}}
                <li>No subtopics available</li>
              {{/each}}
            </ul>
          </div>
          <div class="member-topic-button-area">
            <a href="/topics/{{selectedTopics.topic3.viewName}}" class="member-topic-review">review this topic</a>
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</div>

