<!-- JS: Testimonial Rotation -->
<script>
document.addEventListener("DOMContentLoaded", function () {
  const images = [
    {
      src: "https://www.twennie.com/images/bluelady2.png",
      quote: "Twennie.com allows a team to build a culture of learning. Learn in smaller increments, continually developing new skills and knowledge as you work."
    },
    {
      src: "https://www.twennie.com/images/blueman3.png",
      quote: "Make a noticeable change in your group. Teach them to work together more effectively and support one another - get them learning on Twennie.com."
    },
    {
      src: "https://www.twennie.com/images/bluelady3.png",
      quote: "With Twennie.com, your team can learn right where they are, a little at a time. The platform adapts to its users."
    }
  ];

  let currentIndex = 0;
  const testimonialImage = document.getElementById("testimonial-image");
  const testimonialText = document.getElementById("testimonial-text");

  function changeTestimonial() {
    testimonialImage.classList.add("fade-out");
    testimonialText.classList.add("fade-out");

    setTimeout(() => {
      currentIndex = (currentIndex + 1) % images.length;
      testimonialImage.src = images[currentIndex].src;
      testimonialText.textContent = images[currentIndex].quote;

      setTimeout(() => {
        testimonialImage.classList.remove("fade-out");
        testimonialText.classList.remove("fade-out");
      }, 100);
    }, 1000);
  }

  setInterval(changeTestimonial, 8000);
});
</script>

<!-- JS: Animate .home-feature elements on scroll -->
<script>

document.addEventListener("DOMContentLoaded", function () {
  const animatedElements = document.querySelectorAll(".home-feature.home-feature-animate");

  const observer = new IntersectionObserver(
    (entries, observerSelf) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add("home-feature-fade-in");
          observerSelf.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.5 } // Lowered threshold for better triggering
  );

  animatedElements.forEach(el => observer.observe(el));
});
</script>







