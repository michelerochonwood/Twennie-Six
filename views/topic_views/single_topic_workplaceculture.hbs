  <div class="topic-main-area">
    <div class="topic-header">
      <div>
        <h1 class="topic-title">Workplace Culture</h1>
      </div>

      <!-- Mobile Sidebar Toggle Button -->
      <div class="more-topics">
        <p>more topics</p>
        <ion-icon name="newspaper-outline" id="mobile-sidebar-btn"></ion-icon>
      </div>
    </div>

    <!-- Subtopics Partial -->
