<script>
  function toggleCard(element) {
    let card = element.closest('.bytopic-library-unit-card');
    card.classList.toggle('active');
    let arrow = element.querySelector('.bytopic-arrow-icon');
    arrow.classList.toggle('open');
  }
</script>
